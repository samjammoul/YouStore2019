@model IEnumerable<Models.Product>

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
        font-family: arial;
    }

    .price {
        color: grey;
        font-size: 22px;
    }

    .card button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

        .card button:hover {
            opacity: 0.7;
        }
</style>



@foreach (var item in Model)
{

    <div class="card">
        <img src="~/images/@Html.DisplayFor(modelItem => item.Productimagelink)" alt="Denim Jeans" style="width:100%">
        <h1>@Html.DisplayFor(modelItem => item.ProductName)</h1>
        <p class="price">$@Html.DisplayFor(modelItem => item.ProductPrijs)</p>
        <p>@Html.DisplayFor(modelItem => item.ProductDescription)</p>
        <p><button onclick="location.href='@Url.Action("Login", "Client")'">Add to Cart</button></p>
    </div>

}
    
